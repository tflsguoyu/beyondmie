    <shape type="sphere">
        <transform name="toWorld">
            <rotate x="1" angle="0"/>
            <scale x="0.02" y="0.02" z="0.02"/>
            <translate x="0" y="0" z="-0.2"/>
        </transform>    
        <emitter type="area">
            <spectrum name="radiance" value="10"/>
        </emitter>
    </shape>

